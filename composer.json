{
    "name": "ivandakhin/wp-auto-posting",
    "description": "Продемонструвати навички розробки плагінів для WordPress, роботи з Composer, створення сторінок налаштувань, та інтеграції із OpenAI.",
    "type": "project",
    "autoload": {
        "psr-4": {
            "WpAutoPosting\\": "src/"
        }
    },
    "authors": [
        {
            "name": "ivandakhin",
            "email": "ivan.dakhin@icloud.com"
        }
    ],
    "require": {
        "openai-php/client": "^0.10.3",
        "symfony/http-client": "^7.2",
        "nyholm/psr7": "^1.8"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
